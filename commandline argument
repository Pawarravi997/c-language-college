#include <stdio.h>

int main(int argc, char *argv[]) {
    int i;

    printf("Program name: %s\n", argv[0]);

    if (argc < 2) {
        printf("No arguments passed.\n");
    } else {
        printf("Arguments passed:\n");
        for (i = 1; i < argc; i++) {
            printf("argv[%d] = %s\n", i, argv[i]);
        }
    }

    return 0;
}

o/p
Program name: ./demo
Arguments passed:
argv[1] = apple
argv[2] = banana
argv[3] = cherry
